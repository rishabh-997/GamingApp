<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_height="wrap_content"
  android:layout_width="match_parent"
  android:layout_marginTop="12dp"
  android:layout_marginStart="12dp"
  android:layout_marginEnd="12dp"
  app:cardCornerRadius="8dp"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  app:cardBackgroundColor="@color/colorPrimary">
  <RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:padding="8dp">

      <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/tour_img"
        android:layout_width="100dp"
        android:layout_height="96dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:scaleType="fitXY"
        app:roundedCornerRadius="5dp"
        app:roundingBorderColor="@color/OrangeText"
        app:roundingBorderWidth="1dp" />

      <RelativeLayout
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/map"
        android:id="@+id/lay_after_reg"
        android:layout_marginStart="26dp"
        android:layout_marginTop="4dp"
        android:layout_toEndOf="@+id/tour_img">

        <TextView
          android:id="@+id/tv_4"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"

          android:layout_alignParentStart="true"
          android:layout_alignParentTop="true"
          android:layout_marginStart="0dp"
          android:layout_marginTop="0dp"
          android:text="RoomId" />

        <TextView
          android:id="@+id/tv_5"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_below="@+id/tv_4"
          android:layout_alignParentStart="true"
          android:layout_marginStart="1dp"
          android:layout_marginTop="0dp"
          android:text="Password" />

        <TextView
          android:id="@+id/room_id"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_alignParentTop="true"
          android:layout_marginStart="19dp"
          android:layout_marginTop="0dp"
          android:layout_toEndOf="@+id/tv_4"
          android:text="0000" />

        <TextView
          android:id="@+id/room_pass"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_alignStart="@+id/room_id"
          android:layout_alignTop="@+id/tv_5"
          android:layout_marginTop="1dp"
          android:text="Passsddssd" />

      </RelativeLayout>

      <TextView
        android:id="@+id/not"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginStart="26dp"
        android:layout_toEndOf="@+id/tour_img"
        android:text="Tournament"
        android:textColor="@android:color/white"
        android:textSize="20dp" />

      <TextView
        android:id="@+id/sdate"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/not"
        android:layout_alignStart="@+id/not"
        android:layout_marginTop="8dp"
        android:text="12/12/1234" />

      <TextView
        android:id="@+id/stime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/not"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_toEndOf="@+id/sdate"
        android:text="29:78:88" />

      <TextView
        android:id="@+id/map"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/sdate"
        android:layout_alignStart="@+id/sdate"
        android:text="Erangle" />

      <TextView
        android:id="@+id/game_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/stime"
        android:layout_alignStart="@+id/stime"
        android:text="solo" />


      <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/registerforcontest"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="16dp"
        android:layout_centerVertical="true"
        android:foreground="@drawable/ic_play_circle_outline_black_24dp"
        android:foregroundGravity="right" />

      <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textColor="@android:color/white" />

    </RelativeLayout>
  </RelativeLayout>
</androidx.cardview.widget.CardView>